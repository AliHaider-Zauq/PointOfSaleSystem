@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Role</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>

                    <form asp-action="Delete" method="post" asp-route-id="@role.Id" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
