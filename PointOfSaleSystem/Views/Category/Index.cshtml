@model IEnumerable<PointOfSaleSystem.Models.Category>

@{
    ViewData["Title"] = "List Of Categories";
}

<h2>Categories of Products</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Category</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </div>
                </td>
                }
        </tr>
        }
    </tbody>
</table>