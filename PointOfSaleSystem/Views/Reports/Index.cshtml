@{
    ViewData["Title"] = "📊 Reports Dashboard";

    var topProducts = ViewBag.TopProducts as List<PointOfSaleSystem.ViewModels.TopProductViewModel> ?? new();
    var topCustomers = ViewBag.TopCustomers as List<PointOfSaleSystem.ViewModels.TopCustomerViewModel> ?? new();
    var lowStock = ViewBag.LowStockProducts as List<PointOfSaleSystem.Models.Product> ?? new();

    decimal totalSalesToday = ViewBag.TotalSalesToday ?? 0M;
    decimal totalRevenue = ViewBag.TotalRevenue ?? 0M;
    decimal totalProfit = ViewBag.TotalProfit ?? 0M;
}

<h2 class="mb-4">📊 Reports Dashboard</h2>

<!-- 🔹 Revenue, Profit, Today Sales -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-success text-white shadow-sm">
            <div class="card-body">
                <h5>Total Sales Today</h5>
                <h3>@totalSalesToday.ToString("C")</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-info text-white shadow-sm">
            <div class="card-body">
                <h5>Total Revenue</h5>
                <h3>@totalRevenue.ToString("C")</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-primary text-white shadow-sm">
            <div class="card-body">
                <h5>Total Profit</h5>
                <h3>@totalProfit.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<!-- 👑 Top Customers -->
<h4 class="mt-5">👑 Top Customers</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Orders</th>
            <th>Total Spent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in topCustomers)
        {
            <tr>
                <td>@c.CustomerName</td>
                <td>@c.OrdersCount</td>
                <td>@c.TotalSpent.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<!-- 🔥 Top Selling Products -->
<h4 class="mt-5">🔥 Top Selling Products</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity Sold</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in topProducts)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.QuantitySold</td>
            </tr>
        }
    </tbody>
</table>

<!-- 📦 Low Stock Items -->
<h4 class="mt-5">⚠️ Low Stock Products</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Quantity Left</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in lowStock)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category?.Name</td>
                <td class="text-danger fw-bold">@p.Quantity</td>
            </tr>
        }
    </tbody>
</table>
